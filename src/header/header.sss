header
	padding-top: 6rem
	padding-bottom: 1rem

	background-color: var(--main-light)

header h1
	margin-top: 0
	margin-bottom: 0

	letter-spacing: -0.05rem

@media screen and (min-width: 901px)
	header h1
		font-size: 5.0625rem

@media screen and (max-width: 900px)
	header h1
		font-size: 2.8125rem

	header h1 span
		display: block

header h1
	color: var(--main-dark)
	line-height: 1

header h1 span
	color: var(--accent-red)